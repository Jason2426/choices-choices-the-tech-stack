---

interface Props{
    href: string;
    className: string;
}

const {href, className} = Astro.props

---

<a href={href} class={className}>
    <!--Bij sommmige links staat het icoon/svg aan de linker kant deze kun je dan aanroepen met slot="svg-icon-left" 
    in het component-->
    <slot name="svg-icon-left"/>

    <slot name="link-text"/>
    
    <slot name="svg-icon-right"/>
</a>

<style>

    a {
        display: flex;
        align-items: center;
        color: inherit;
        text-decoration: none;
        font-size: .75em;
        text-transform: uppercase; /* incase someone forgets to type in uppercase */
        gap: .45em; 
    }

    .back-to-home{
        font-size: 1em;
    }

    .detail-link {
        font-weight: bold;
        color: var(--blue);
        stroke: var(--blue); /* blue color for svg */
    }

    .login-link{
        color: var(--blue);
        stroke:var(--blue);
    }

</style>